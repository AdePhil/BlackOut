    // navbar
    header.header
      nav.navbar.navbar-expand-lg.px-4.py-2.bg-white.shadow.bg-main.text-white
        a.sidebar-toggler.text-gray-500.mr-4.mr-lg-5.lead(href='#')
          i.fas.fa-align-left
        a.navbar-brand.font-weight-bold.text-uppercase.text-base.text-white(href='index.html') Admin Dashboard
        ul.ml-auto.d-flex.align-items-center.list-unstyled.mb-0
          li.nav-item
            form#searchForm.ml-auto.d-none.d-lg-block
              .form-group.position-relative.mb-0
                button.position-absolute.border-0.p-0(type='submit', style='left: 8px; background-color: transparent;')
                  i.o-search-magnify-1.text-gray.text-lg
                input.pl-4.form-control.form-control-sm.border-0.no-shadow(type='search', placeholder='Search ...')
          li.nav-item.dropdown.mr-3
            a#notifications.nav-link.dropdown-toggle.text-gray-400.px-1(href='http://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              i.fa.fa-bell
              span.notification-icon
            .dropdown-menu(aria-labelledby='notifications')
              a.dropdown-item(href='#')
                .d-flex.align-items-center
                  .icon.icon-sm.bg-violet.text-white
                    i.fab.fa-twitter
                  .text.ml-2
                    p.mb-0 You have 2 followers
              a.dropdown-item(href='#')
                .d-flex.align-items-center
                  .icon.icon-sm.bg-green.text-white
                    i.fas.fa-envelope
                  .text.ml-2
                    p.mb-0 You have 6 new messages
              a.dropdown-item(href='#')
                .d-flex.align-items-center
                  .icon.icon-sm.bg-blue.text-white
                    i.fas.fa-upload
                  .text.ml-2
                    p.mb-0 Server rebooted
              a.dropdown-item(href='#')
                .d-flex.align-items-center
                  .icon.icon-sm.bg-violet.text-white
                    i.fab.fa-twitter
                  .text.ml-2
                    p.mb-0 You have 2 followers
              .dropdown-divider
              a.dropdown-item.text-center(href='#')
                small.font-weight-bold.headings-font-family.text-uppercase View all notifications
          li.nav-item.dropdown.ml-auto
            a#userInfo.nav-link.dropdown-toggle(href='http://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              img.img-fluid.rounded-circle.shadow(src='/img/avatar-6.jpg', alt='Jason Doe', style='max-width: 2.5rem;')
            .dropdown-menu(aria-labelledby='userInfo')
              a.dropdown-item(href='#')
                strong.d-block.text-uppercase.headings-font-family Mark Stephen
                small Web Developer
              .dropdown-divider
              a.dropdown-item(href='#') Settings
              a.dropdown-item(href='#') Activity log
              .dropdown-divider
              a.dropdown-item(href='login.html') Logout
    .d-flex.align-items-stretch
      #sidebar.sidebar.py-3
        .text-gray-400.text-uppercase.px-3.px-lg-4.py-4.font-weight-bold.small.headings-font-family MAIN
        ul.sidebar-menu.list-unstyled
          li.sidebar-list-item
            a.sidebar-link.text-muted(href='/admin/account/' class=title === "admin-home" ? "active" : "")
              i.o-home-1.mr-3.text-gray
              span Home
          li.sidebar-list-item
            a.sidebar-link.text-muted(href='/admin/account/locations' class=title === "locations" ? "active" : "")
