          li.sidebar-list-item
            a.sidebar-link.text-muted(href='tables.html')
              i.o-table-content-1.mr-3.text-gray
              span Tables
          li.sidebar-list-item
            a.sidebar-link.text-muted(href='forms.html')
              i.o-survey-1.mr-3.text-gray
