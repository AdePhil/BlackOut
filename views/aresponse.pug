extends layout
block content
  .container
    .row
      div(class='col-md-12')
        //- h1 Response from #{answers.user.firstname} #{answers.user.lastname}
        table(class='table table-bordered mt-4')
          thead
            tr.d-flex
              th(class='text-center yellocell col-3') Question No
              th(class='text-center yellocell col-6') Question
              th(class='text-center yellocell col-3') Answer
          tbody
            each response in answers.response
              tr.d-flex
                td.text-center.col-3 #{response.questionNo}
                td.col-6 #{response.question}
                td.text-center.col-3 #{response.responses.join(',')}
    - const link = `admin/account/responses/${answers._id}`
    .pagination.mt-4
        .pagination__prev
          if page > 1
            a.btn.btn-primary(href=`/${link}/page/${page - 1}`) Prev
        .pagination__text
          p Page #{page} of #{pages} â€” #{count} total results
        .pagination__next
          if page < pages
            a.btn.btn-primary(href=`/${link}/page/${parseFloat(page) + 1}`) Next